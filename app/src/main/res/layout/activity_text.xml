<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <EditText
        android:id="@+id/text_name_string"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/name_hint"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/text_subject_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name_string"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="@string/subject_hint"
        android:paddingTop="20dp"/>

    <!-- <ScrollView android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@id/text_subject_number"
        android:id="@+id/scrollView">
        <TextView android:id="@+id/text"
            style="@style/Widget.SampleMessage"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:layout_weight="1.26"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:paddingTop="@dimen/vertical_page_margin"
            android:height="800dp" />
    </ScrollView> -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_question3_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@id/text_subject_number">
    <TextView android:id="@+id/text_question3"
        style="@style/Widget.SampleMessage"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_question3"
        />
    <EditText android:id="@+id/text_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/text_answer3_hint"
        android:inputType="text"/>
    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_question4_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@id/text_question3_layout">
    <TextView android:id="@+id/text_question4"
        style="@style/Widget.SampleMessage"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_question4"
        />
    <EditText android:id="@+id/text_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/text_answer4_hint"
        android:inputType="text"
        />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_question5_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@id/text_question4_layout">
        <TextView android:id="@+id/text_question5"
            style="@style/Widget.SampleMessage"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_question5"
            />
        <EditText android:id="@+id/text_answer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:hint="@string/text_answer5_hint"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_question6_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@id/text_question5_layout">
        <TextView android:id="@+id/text_question6"
            style="@style/Widget.SampleMessage"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_question6"
            />
        <EditText android:id="@+id/text_answer6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:hint="@string/text_answer6_hint"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_question7_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@id/text_question6_layout">
        <TextView android:id="@+id/text_question7"
            style="@style/Widget.SampleMessage"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_question7"
            />
        <EditText android:id="@+id/text_answer7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:hint="@string/text_answer7_hint"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_question8_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@id/text_question7_layout">
        <TextView android:id="@+id/text_question8"
            style="@style/Widget.SampleMessage"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_question8"
            />
        <EditText android:id="@+id/text_answer8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:hint="@string/text_answer8_hint"
            android:inputType="text"
            />
    </LinearLayout>


    <Button android:id="@+id/textactivity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_next"
        android:layout_gravity="right"
        android:onClick="startCheckboxActivity"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_below="@+id/text_question8_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />

</RelativeLayout>
